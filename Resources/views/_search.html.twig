<div class="box-tools whatwedo_table-search">
    <form action="{{ path(app.request.attributes.get('_route'), { 'page': '1' }) }}">
        <div class="input-group input-group-sm">
            <select data-disable-interactive name="limit" class="form-control">
                {% for num in [25, 50, 100, 200, -1] %}
                    <option value="{{ num }}"{% if table.limit == num %} selected{% endif %}>{% if num == -1 %}alle{% else %}{{ num }}{% endif %} Eintr√§ge</option>
                {% endfor %}
            </select>
            <input type="text" class="form-control" placeholder="Suchbegriff..." value="{{ app.request.query.get('q') }}" name="q">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                {% if app.request.query.get('q')|length > 0 %}
                    <a href="{{ path(app.request.attributes.get('_route'), { page: 1, 'q': '' }) }}" class="btn btn-danger" type="button" title="Suche entfernen">
                        <i class="fa fa-times"></i>
                    </a>
                {% endif %}
                {% if table.filters|length > 0 %}
                    <button type="button" data-toggle="filter" class="btn btn-success" title="Filter">
                        <i class="fa fa-filter"></i>
                    </button>
                {% endif %}
            </span>
        </div>
    </form>
</div>
