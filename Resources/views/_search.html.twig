<div class="box-tools whatwedo_table-search">
    <form action="{{ whatwedo_table_generate_route_replace_arguments({ (table.actionQueryParameter('page')) : 1 }) }}">
        <div class="input-group input-group-sm">
            {% if table.hasExtension('whatwedo\\TableBundle\\Extension\\PaginationExtension') %}
                {% set pagination = table.getExtension('whatwedo\\TableBundle\\Extension\\PaginationExtension') %}
                <select data-disable-interactive name="{{ table.actionQueryParameter('limit') }}" class="form-control">
                    {% for num in table.options['limit_choices'] %}
                        <option value="{{ num }}"{% if pagination.limit == num %} selected{% endif %}>{{ num }} Eintr√§ge</option>
                    {% endfor %}
                </select>
            {% else %}
                <input type="hidden" name="{{ table.actionQueryParameter('limit') }}" value="-1">
            {% endif %}
            <input type="text" class="form-control" placeholder="Suchbegriff..." value="{{ table.searchQuery }}" name="{{ table.actionQueryParameter('query') }}">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">
                    <i class="fa fa-search"></i>
                </button>
                {% if table.searchQuery|length > 0 %}
                    <a href="{{ whatwedo_table_generate_route_replace_arguments({
                        (table.actionQueryParameter('page')) : 1,
                        (table.actionQueryParameter('query')) : ''
                    }) }}" class="btn btn-danger" type="button" title="Suche entfernen">
                        <i class="fa fa-times"></i>
                    </a>
                {% endif %}
                {% if table.filters is defined and table.filters|length > 0 %}
                    <button type="button" data-toggle="filter" class="btn btn-success" title="Filter">
                        <i class="fa fa-filter"></i>
                    </button>
                {% endif %}
            </span>
        </div>
    </form>
</div>
